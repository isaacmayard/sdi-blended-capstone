{
	"editor.codeActionsOnSave": {
		"source.addMissingImports": true,
		"source.fixAll": true,
		"source.sortImports": true
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.tabSize": 2,
	"files.exclude": {
		"**/.cache": true,
		"**/.DS_Store": true,
		"**/.editorconfig": true,
		"**/.eslintcache": true,
		"**/.git": true,
		"**/.gitattributes": true,
		"**/.husky": true,
		"**/.pnp.*": true,
		"**/.prettierignore": true,
		"**/node_modules": true,
		"**/yarn.lock": true,
		"**/.stylelintcache": true,
		"**/.gitignore": false,
		"**/.nyc_output": true,
		"**/.vscode": false,
		"**/dist": true,
		"**/coverage": true,
		"**/pnpm-lock.yaml": true,
		"**/package-lock.json": true
	},
	"search.exclude": {
		"**/dist/": true,
		"**/.pnp.*": true,
		"**/.yarn": true,
		"**/yarn-error.log": true,
		"**/yarn.lock": true,
		"**/pnpm-lock.yaml": true,
		"**/package-lock.json": true
	},
	"terminal.integrated.env.linux": {
		"CACHE_DIR": "${workspaceFolder}/.cache"
	},
	"terminal.integrated.env.osx": {
		"CACHE_DIR": "${workspaceFolder}/.cache"
	},
	"terminal.integrated.env.windows": {
		"CACHE_DIR": "${workspaceFolder}\\.cache"
	},
	"cSpell.ignoreWords": [
		"browserslist",
		"cloudfunctions",
		"corejs",
		"endregion",
		"entrypoint",
		"envalid",
		"envars",
		"eslintcache",
		"esmodules",
		"esnext",
		"execa",
		"firebaseapp",
		"firestore",
		"globby",
		"hono",
		"jamstack",
		"kriasoft",
		"localforage",
		"miniflare",
		"nodenext",
		"notistack",
		"oidc",
		"pathinfo",
		"pnpify",
		"reactstarter",
		"refetch",
		"refetchable",
		"sendgrid",
		"signup",
		"sourcemap",
		"spdx",
		"swapi",
		"tslib",
		"typechecking",
		"webflow",
		"yarnpkg",
		"yarnrc"
	]
}
